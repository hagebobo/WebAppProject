pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t webapp:latest .'
            }
        }

        stage('Deploy with Docker') {
            steps {
                script {
                    sh '''
                        # Stop old container if exists
                        if [ "$(docker ps -q -f name=webapp)" ]; then
                            docker stop webapp
                            docker rm webapp
                        fi

                        # Run new version
                        docker run -d -p 3000:3000 --name webapp webapp:latest
                    '''
                }
            }
        }
    }
}
